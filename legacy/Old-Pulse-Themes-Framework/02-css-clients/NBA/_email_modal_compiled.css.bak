@import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,500&display=swap");
#_pi_surveyWidgetContainer #_pi_surveyWidget {
  justify-content: center !important;
  background-color: rgba(0, 0, 0, 0.7);
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_closeButton {
  /*width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0 !important;
  z-index: 1 !important; */
  z-index: 99;
  padding: 8px;
  transform: translate(327px, 41px);
  color: #cccccc !important;
  position: relative !important;
}
@media(max-width: 700px){
  #_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_closeButton{
      transform: translate(calc(100vw/2 - 20px), 41px);
  }
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer {
  width: 700px;
  max-width: 100%;
  background-color: white;
  border-radius: 5px;
  padding: 40px;
  padding-bottom: 0px;
  z-index: 2 !important;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_question._pi_question_free_text_question {
  margin: 0 0 50px 0;
  text-align: center;
  text-transform: uppercase;
  font-size: 45px !important;
  font-style: normal;
  color: #000;
  line-height: normal;
  font-weight: 400;
  font-family: 'Roboto',"Lato", sans-serif;
  pointer-events: auto;
  padding: 0 0px;
  position: relative;
  width: 100%;
  padding-left: 35px;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_question._pi_question_free_text_question:before {
  content: "";
  height: 68px;
  width: 30px;
  background-image: url("https://cdn.pulseinsights.com/images/answer_image/63/NBA.png");
  background-size: contain;
  background-repeat: no-repeat;
  position: absolute;
  top: 0;
  left: 0;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_question._pi_question_custom_content_question {
  color: #607084;
  font-size: 12px;
  font-style: italic;
  line-height: 15px;
  font-family: arial,sans-serif;
  padding: 20px 0;
  border-top: 1px solid rgba(127, 121, 135, 0.2);
  margin-top: 0px !important;
  margin-bottom: 20px !important;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_question._pi_question_custom_content_question p {
  margin-bottom: 0px;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_question._pi_question_custom_content_question a {
  color: #1f4488;
  text-decoration: underline;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_question._pi_question_single_choice_question {
  width: 100%;
  color: #000;
  text-align: center;
  padding: 0px;
  font-size: 18px !important;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_answers_container[data-question-type="custom_content_question"] {
  display: none !important;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_answers_container[data-question-type="free_text_question"] {
  padding: 0px;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_answers_container[data-question-type="free_text_question"] div._pi_free_text_question_field_container {
  margin: 0px;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_answers_container[data-question-type="free_text_question"] div._pi_free_text_question_field_container input {
  height: 50px;
  line-height: 50px;
  border: 1px solid #8fa9b6;
  padding: 15px;
  color: #000;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_answers_container[data-question-type="free_text_question"] ._pi_free_text_question_submit_button_container {
  display: none;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_answers_container[data-question-type="free_text_question"] ._pi_free_text_question_label_container {
  display: none;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer div._pi_answers_container {
  padding: 0px !important;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer div._pi_answers_container select {
  width: 100%;
  border: 1px solid #8fa9b6;
  height: 50px;
  background-position: calc(100% - 15px) center;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_all_questions_submit_button_container {
  width: 100%;
  margin-bottom: 20px;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_all_questions_submit_button_container ._pi_all_questions_submit_button {
  width: 100%;
  max-width: none;
  background-color: #1a408c;
  color: #fff;
  border: 0;
  padding: 15px 25px;
  text-transform: uppercase;
  border-radius: 7px;
  box-sizing: border-box;
  display: inline-block;
  font-weight: 700;
  font-size: 16px;
  line-height: 1;
  cursor: pointer;
  transition: all .2s linear;
  display: block;
  width: 100%;
  max-width: none;
  margin-top: 20px !important;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_all_questions_submit_button_container ._pi_all_questions_submit_button:hover {
  background-color: #212121;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer ._pi_thankYouSurvey {
  color: #333;
  font-size: 25px;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer > *:nth-child(1) {
  order: 1;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer > *:nth-child(2) {
  order: 2;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer > *:nth-child(3) {
  order: 3;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer > *:nth-child(4) {
  order: 4;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer > *:nth-child(5) {
  order: 6;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer > *:nth-child(6) {
  order: 7;
}

#_pi_surveyWidgetContainer #_pi_surveyWidget ._pi_widgetContentContainer > *:nth-child(7) {
  order: 5;
}

#_pi_surveyWidgetContainer.mobile-enabled #_pi_surveyWidget {
  justify-content: flex-end !important;
}

#_pi_surveyWidgetContainer.mobile-enabled #_pi_surveyWidget ._pi_widgetContentContainer {
  padding: 20px;
  padding-bottom: 0px;
}

#_pi_surveyWidgetContainer.mobile-enabled #_pi_surveyWidget ._pi_widgetContentContainer ._pi_question._pi_question_free_text_question {
  font-size: 24px !important;
  margin-bottom: 25px;
}

#_pi_surveyWidgetContainer.mobile-enabled #_pi_surveyWidget ._pi_widgetContentContainer ._pi_question._pi_question_custom_content_question {
  font-size: 10px;
}

#_pi_surveyWidgetContainer.mobile-enabled #_pi_surveyWidget ._pi_widgetContentContainer ._pi_question._pi_question_custom_content_question p {
  font-size: 10px;
}
