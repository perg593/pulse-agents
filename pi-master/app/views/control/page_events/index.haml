.page-events
  %h1 Events
%table.table.table-hover.table-responsive.list-table
  %thead
    %tr
      %th.hidden-sm.hidden-xs(data-sort='string')
        Event
        .arrow.arrow-up.hide
      %th.hidden-sm.hidden-xs(data-sort='int')
        Count
        .arrow.arrow-up.hide
      %th.hidden-sm.hidden-xs(data-sort='string')
        Latest
        .arrow.arrow-up.hide
      - if current_user.admin?
        %th.hidden-sm.hidden-xs(data-sort='data-string')
          Action
          .arrow.arrow-up.hide
  %tbody
    - @page_events_per_name.each do |page_events|
      %tr
        %td= page_events.name
        %td= page_events.event_count
        %td= page_events.latest_created_at.strftime('%Y-%m-%d %H:%M')
        - if current_user.admin?
          %td= link_to "Delete All", delete_all_page_events_path(event_name: page_events.name), method: :delete, remote: true,
            data: { confirm: "Would you like to delete all \"#{page_events.name}\" occurrences?" }

- content_for :js, javascript_include_tag('list_page_common')
