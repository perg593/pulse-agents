:ruby
  modal_id ||= nil

  base_survey = @possible_answer_locale_group.question_locale_group.survey_locale_group.base_survey
  base_possible_answer = @possible_answer_locale_group.possible_answers.find_by(id: base_survey.possible_answers.pluck(:id))

.modal.fade{id: modal_id, :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      = form_for [:control, @possible_answer_locale_group], url: possible_answer_locale_group_path(@possible_answer_locale_group), html: {method: "patch"} do |possible_answer_locale_group_form|
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h5.modal-title Edit Possible Answer
        .modal-body
          = possible_answer_locale_group_form.fields_for "possible_answers", base_possible_answer do |base_possible_answer_form|
            = base_possible_answer_form.hidden_field :id
            .basic-fields-row
              %label Base Value:
              = base_possible_answer_form.text_field :content, class: 'base-content-input', data: { last_val: base_possible_answer.content }, required: true

          .basic-fields-row
            %label Short Name:
            = possible_answer_locale_group_form.text_field :name, class: 'locale-group-name', required: true

          .basic-fields-row
            %label Next Question:
            - initial_selection = Question.find_by(id: base_possible_answer.next_question_id)&.question_locale_group&.id
            = select_tag :next_question_locale_group_id, options_for_select(next_question_options(base_survey), initial_selection), include_blank: true

        .modal-footer
          = link_to "Destroy", possible_answer_locale_group_path(@possible_answer_locale_group), method: :delete, class: "btn btn-danger", data: { confirm: "This will delete this possible answer across all surveys in group. Proceed?" }
          = possible_answer_locale_group_form.submit 'Update', class: 'btn btn-primary'
