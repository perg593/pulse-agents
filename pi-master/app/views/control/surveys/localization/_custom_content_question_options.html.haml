:ruby
  survey ||= nil
  follow_up_questions_fields ||= nil

.options
  %a{:href => '#', :class => 'options-link'}
    .arrow &#9658;
    Options
  .options-content
    - unless survey.display_all_questions
      .form-group.numeric
        .controls
          = follow_up_questions_fields.check_box :fullscreen, disabled: true, id: 'question_fullscreen'
          %p.hint Full screen take-over
    .fullscreen-group.hide
      .form-group.numeric.background_color
        %p.hint Background color
        .controls
          = follow_up_questions_fields.input_field :background_color, data: { toggle: 'tooltip', placement: 'bottom' }, title: I18n.t('simple_form.titles.survey.background_color'), id: 'question_background_color', disabled: true
          .color-box{ id: :background_color_box, data: {color: (follow_up_questions_fields.object&.background_color || ""), target: '#question_background_color', follow_up: 'true'} }
      .form-group.numeric.opacity
        %p.hint Opacity
        .controls
          = follow_up_questions_fields.text_field :opacity, numeric: true, id: 'question_opacity', disabled: true
          %p.hint %
  .options-content
    .form-group.numeric
      .controls
        = follow_up_questions_fields.check_box :autoclose_enabled, id: 'autoclose_enabled', disabled: true
        %p.hint Auto-close after
        = follow_up_questions_fields.text_field :autoclose_delay, id: 'autoclose_delay', numeric: true, disabled: true
        %p.hint seconds
    .options-content
      .form-group.numeric
        .controls
          = follow_up_questions_fields.check_box :autoredirect_enabled, id: 'autoredirect_enabled', disabled: true
          %p.hint Auto-redirect to
          = follow_up_questions_fields.text_field :autoredirect_url, id: 'autoredirect_url', disabled: true
          %p.hint after
          = follow_up_questions_fields.text_field :autoredirect_delay, id: 'autoredirect_delay', numeric: true, disabled: true
          %p.hint seconds
