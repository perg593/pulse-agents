:ruby
  modal_id ||= nil
  survey ||= nil

.localization-modal-container
  .modal.fade{id: modal_id, :role => "dialog", :tabindex => "-1"}
    .modal-dialog{:role => "document"}
      .modal-content
        = form_with model: SurveyLocaleGroup.new, local: true do |survey_locale_group_form|
          = hidden_field_tag :survey_id, survey.id
          .modal-header
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} Ã—
            %h5.modal-title Set as a Base Survey

          .modal-body
            %p
              You are setting <i>#{survey.name}</i> as a base template in a group.
              %br
              All existing details and routing will be referenced in the bulk editor.

            %label Group Name:
            = survey_locale_group_form.text_field :name, placeholder: survey.name, required: true

          .modal-footer.localize-survey-modal
            %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
            = survey_locale_group_form.submit 'Create', class: 'btn btn-primary'
