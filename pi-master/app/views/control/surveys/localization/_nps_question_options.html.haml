:ruby
  follow_up_questions_fields ||= nil

.options
  %a{:href => '#', :class => 'options-link'}
    .arrow &#9658;
    Options
  .options-content
    .options-group.answers-options
      = follow_up_questions_fields.hidden_field :button_type, id: 'button-type', disabled: true, class: 'button-type'

      .desktop-answer-width-type
        = follow_up_questions_fields.input_field :desktop_width_type, as: :select, collection: Question::WIDTH_TYPE_OPTIONS, id: 'desktop-width-type-select',
        prompt: 'Width Type', disabled: true
      .answer-per-row-desktop.nps-per-row
        = follow_up_questions_fields.input_field :answers_per_row_desktop, numeric: true, id: 'input_answers_per_row_desktop', disabled: true
        %label Per Rows on Desktop
      .answer-alignment-type-desktop
        = follow_up_questions_fields.input_field :answers_alignment_desktop, as: :select, collection: Question.answers_alignment_for_select,
        id: 'answers-alignment-desktop-select', include_blank: false, disabled: true

      .mobile-answer-width-type
        = follow_up_questions_fields.input_field :mobile_width_type, as: :select, collection: Question::WIDTH_TYPE_OPTIONS, id: 'mobile-width-type-select',
        prompt: 'Width Type', disabled: true
      .answer-per-row-mobile.nps-per-row
        = follow_up_questions_fields.input_field :answers_per_row_mobile, numeric: true, id: 'input_answers_per_row_mobile', disabled: true
        %label Per Rows on Mobile
      .answer-alignment-type-mobile
        = follow_up_questions_fields.input_field :answers_alignment_mobile, as: :select, collection: Question.answers_alignment_for_select,
        id: 'answers-alignment-mobile-select', include_blank: false, disabled: true

      .additional-text
        .subtitle Additional Text
        .form-group
          %label Before Question
          .controls
            = follow_up_questions_fields.input_field :before_question_text, disabled: true
        .form-group
          %label After Question
          .controls
            = follow_up_questions_fields.input_field :after_question_text, disabled: true

        .form-group
          %label Before Answers
          .controls
            = follow_up_questions_fields.input_field :before_answers_count, as: :integer, numeric: true, id: 'before_answers_count_input', min: 0, max: 11, value: 0, disabled: true
            = follow_up_questions_fields.input_field :before_answers_items, multiple: true, id: 'before_answers_item', class: 'hidden', disabled: true

        .icon-answers
          = image_tag 'questions/icon-answers.png'

        .form-group
          %label After Answers
          .controls
            = follow_up_questions_fields.input_field :after_answers_count, as: :integer, numeric: true,  id: 'after_answers_count_input', min: 0, max: 11, value: 0, disabled: true
            = follow_up_questions_fields.input_field :after_answers_items, multiple: true, id: 'after_answers_item', class: 'hidden', disabled: true
