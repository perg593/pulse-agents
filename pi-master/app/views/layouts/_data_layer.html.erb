<% if current_user %>
  <%= content_tag :div, '', id: 'data-layer', style: 'display: none;',
                  data: {
                    user_i_d: current_user.id, # userID
                    account_id: current_user.account&.identifier,
                    account_name: current_user.account&.name,
                    user_role: current_user.role,
                    log_in_as: session[:sudo_from_id].present? # logInAs
                  }
  %>
  <%= javascript_include_tag 'google_analytics' %>
<% end %>
